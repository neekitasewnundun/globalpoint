@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

</head>
<body style=" background-color: black;">

    <div class="container">

        <div class="row">

            <div class="col-sm-3">

                <h4 style="color:#ffffff">Atmosphere</h4>
                <button class="list-group-item btn btn-block" onclick="truecolor()" title="See the planet earth in real colors with clouds and atmospehere!">True Color</button>
                <br>
                <button class="list-group-item btn btn-block" onclick="aerosol(), showHideDiv('play1'),showHidePic('pic3')" title="Get to know what Aerosol Particles are and what can they cause!">Aerosol Particles</button>


                <a id="play1" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/JXJytEqxQ74?enablejsapi=1" data-title="Aerosol">Play the Animation!</a>

                <br>
                <h4 style="color:#ffffff">Energy</h4>
                <button class="list-group-item btn btn-block" onclick="seatemp(), showHideDiv('play2'),showHidePic('pic2')" title="See the planet earth average sea surface temperature!">Sea Surface Temperature</button>
                <a id="play2" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/guEsZr5MtzE?enablejsapi=1" data-title="Sea Surface Temperature">Play the Animation!</a>
                <br>
                <button class="list-group-item btn btn-block" onclick="landtemp(), showHideDiv('play3'),showHidePic('pic1')" title="See the planet earth average land surface temperature!">Land Surface Temperature</button>
                <a id="play3" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/guEsZr5MtzE?enablejsapi=1" data-title="Land Surface Temperature">Play the Animation!</a>

                <br>
                <h4 style="color:#ffffff">Land</h4>
                <button class="list-group-item btn btn-block" onclick="afire(), showHideDiv('play4'),showHidePic('pic4')" title="See the planet earth current active fires!">Active Fires</button>
                <a id="play4" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/JXJytEqxQ74?enablejsapi=1" data-title="Active Fires">Play the Animation!</a>
                <br>
                <button class="list-group-item btn btn-block" onclick="aleaf(), showHideDiv('play5'),showHidePic('pic5')" title="See the all the forestation on planet earth!">Forestation</button>
                <a id="play5" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/w0U4nlwZrq8?enablejsapi=1" data-title="Forestation">Play the Animation!</a>
                <br>
                <button class="list-group-item btn btn-block" onclick="aveg(), showHideDiv('play6',showHidePic('pic6'))" title="See the all the vegetation on planet earth!">Vegetation</button>
                <a id="play6" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/KGq2dn-i2wE?enablejsapi=1" data-title="Vegetation">Play the Animation!</a>
                <br>

                <br>
                <h4 style="color:#ffffff">Life</h4>
                <button class="list-group-item btn btn-block" onclick="popul(), showHideDiv('play7'),showHidePic('pic7')" title="See the planet earth current Population!">Population</button>
                <a id="play7" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/JXJytEqxQ74?enablejsapi=1" data-title="Population">Play the Animation!</a>
                <br>

                <br>
                <h4 style="color:#ffffff">Ocean</h4>
                <button class="list-group-item btn btn-block" onclick="bathy(), showHideDiv('play8'),showHidePic('pic8')" title="See the bathymetry / earth surface under the sea!">Bathymetry</button>
                <a id="play8" href="#!" class="popup btn btn-success hidden" data-link="//www.youtube.com/embed/JXJytEqxQ74?enablejsapi=1" data-title="Bathymetry">Play the Animation!</a>
                <br>

                <br>
                <h4 style="color:#ffffff">Clear Globe</h4>
                <button class="list-group-item btn btn-block" onclick="clearmap()" title="Clear the globe!">Clear</button>
                <br>
            </div>

            <div class="col-sm-9" id="globe">

                <canvas id="canvasOne" width="1000" height="1000"
                        style="width: 100%; height: auto; background-color: black;">

                    Your browser does not support HTML5 Canvas.

                </canvas>

            </div>

        </div>

    </div>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://files.worldwind.arc.nasa.gov/artifactory/web/0.9.0/worldwind.min.js"
            type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/js/helloWorldWide.js" type="text/javascript">

        /**/</script>
    <script>
        $(document).ready(function () {
            $(".popup").click(function () {
                var $this = $(this);
                var $iframe = $("<iframe>").attr("src", $this.data("link")).css({ "width": 800, "height": 450 });
                var $title = $("<h1>").text($this.data("title"));
                $("#video-view").html($title).append($iframe);
                $iframe.wrap("<div class='class-video'>");
                window.scrollTo(0, 1000);
            });
        });

        /**/</script>

    <script type="text/javascript">
        function showHideDiv(test) {
            var srcElement = document.getElementById(test);
            if (srcElement != null) {
                if (srcElement.className == "popup btn btn-success hidden") {
                    srcElement.className = 'popup btn btn-success';
                }
                else {
                    srcElement.className = 'popup btn btn-success hidden';
                }
                return false;
            }
        }
    </script>
    <script type="text/javascript">
        function showHidePic(test) {
            var srcElement = document.getElementById(test);
            if (srcElement != null) {
                if (srcElement.className == "hidden") {
                    srcElement.className = '';
                }
                else {
                    srcElement.className = 'hidden';
                }
                return false;
            }
        }
    </script>
    <img id="pic1" src="~/images/landtemp.png" class="hidden" width="200" style="margin-left: 1000px;">
    <img id="pic2" src="~/images/seatemp.png" class="hidden" width="200" style="margin-left: 1000px;">
    <img id="pic3" src="~/images/aerosol.png" class="hidden" width="200" style="margin-left: 1000px;">
    <img id="pic4" src="~/images/fire.png" class="hidden" width="200" style="margin-left: 1000px;">
    <img id="pic5" src="~/images/leaf.png" class="hidden" width="200" style="margin-left: 1000px;">
    <img id="pic6" src="~/images/veg.png" class="hidden" width="200" style="margin-left: 1000px;">
    <img id="pic7" src="~/images/pop.png" class="hidden" width="200" style="margin-left: 1000px;">
    <img id="pic8" src="~/images/bathy.png" class="hidden" width="200" style="margin-left: 1000px;">

    <div id="video-view">
    </div>
</body>
</html>